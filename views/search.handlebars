<h1 class="searchHeader">Your search results</h1>

<body>
 {{#each books}}
<div class="card-deck">
<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="https://donrheem.com/wp-content/uploads/2016/11/Book-Placeholder.png" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title"><a class = "itemBtn" data-id = "{{dataValues.id}}" href="#">{{dataValues.title}}</a></h3>
        <p class="card-text"> by {{dataValues.author_name}}</p>
        <p class="card-text">{{dataValues.published_year}}</p>
        <p class="card-text">${{dataValues.price}}.00</p>
        <button class = "addBtn" data-author = "{{dataValues.author_name}}" data-title = "{{dataValues.title}}" data-id = "{{dataValues.id}}">ADD TO CART</button>
      </div>
    </div>
  </div>
</div>
{{/each}}

</body>

